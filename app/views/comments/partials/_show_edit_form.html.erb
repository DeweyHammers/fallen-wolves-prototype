<script>
  $("#<%= id %>_toggle_button").click(function(){
    $("#<%= id %>_edit_comment").toggle();
    $("#<%= id %>_hide_comment").toggle();
    $("#<%= id %>_toggle_button").toggle();
  });

  $("#<%= id %>_cancel_button").click(function(){
    $("#<%= id %>_edit_comment").toggle();
    $("#<%= id %>_hide_comment").toggle();
    $("#<%= id %>_toggle_button").toggle();
  });
</script>
