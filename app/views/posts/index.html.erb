<div class="text-center form-container table mt-5 w-75 p-3 mx-auto">
  <% @posts.each do |category, posts| %>
    <div class='border border-dark mb-4 rounded bg-dark text-white'>
      <h1 class='border-bottom border-secondary'><%= category.capitalize() %></h1>
      <% if !posts.empty? %>
        <table class="table table-striped table-hover">
          <%= render 'posts/partials/table_head' %>
          <% posts.each do |post| %>
            <%= render partial: 'posts/partials/table_body', locals: {post: post} %>   
          <% end %>
        </table>
      <% else %>
        <h5>There is no posts in this Category</h5>
      <% end %>
    </div>
  <% end %>
</div>
