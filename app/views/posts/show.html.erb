<div>
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
  <% if current_user.id == @post.member.id %>
    <p><%= link_to 'Edit', edit_post_path(@post)  %>
    <%= link_to 'Delete', @post , method: :delete %></p>
  <% end %>
  <%= link_to image_tag(url_for(@post.member.avatar), style: 'height:50px;width:50px;'), @post.member %>
  <p><%= @post.member.username %></p>
  <p><%= @post.member.rank %></p>
</div>
