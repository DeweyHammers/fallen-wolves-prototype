<%= form_for @member do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <% if submit == 'Sign Up' %>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>
  <div>
    <%= f.label :avatar %> 
    <%= f.file_field :avatar %>
  </div>
  <div>
    <%= f.submit "#{submit}" %>
  </div>
<% end %>
